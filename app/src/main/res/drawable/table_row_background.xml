<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:drawable="@color/silver" />
    <!-- Top border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/blue_volc"
            android:width="1dp" />
        </shape>
    </item>
    <!-- Bottom border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/blue_volc"
            android:width="1dp" />
        </shape>
    </item>
    <!-- Left border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/blue_volc"
            android:width="1dp" />
        </shape>
    </item>
    <!-- Right border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/blue_volc"
            android:width="1dp" />
        </shape>
    </item>
</layer-list>
